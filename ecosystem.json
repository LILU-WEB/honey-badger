{
    "apps": [
        {
            "name": "honey-badger",
            "script": "main.js",
            "env": {
                "COMMON_VARIABLE": "true"
            },
            "env_production": {
                "NODE_ENV": "production"
            }
        }
    ],
    "deploy": {
        "production": {
            "user": "yang",
            "host": ["hijavascript.com"],
            "port": "22",
            "ref": "origin/master",
            "repo": "git@gitee.com:hackzfy/honey-badger.git",
            "path": "/www/server/production",
            "ssh_options": "StrictHostKeyChecking=no",
            "post-deploy": "npm install --production && pm2 reload ecosystem.json --env production && npm run start:prod",
            "env": {
                "NODE_ENV": "production"
            }
        }
    }
}
